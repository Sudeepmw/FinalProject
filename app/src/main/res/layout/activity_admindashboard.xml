<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <Button
        android:id="@+id/cd_view_orders"
        android:text="View Orders"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:textColor="#131212"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/button1_rounded" />


    <Button
        android:id="@+id/cd_pending_orders"
        android:text="Out of Stock"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:textColor="#131212"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/button1_rounded" />


    <Button
        android:id="@+id/cd_develer_orders"
        android:text="Delivered Orders"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:textColor="#131212"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/button1_rounded" />
    <RelativeLayout
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_add_items"
            android:text="Add Items"
            android:drawableEnd="@drawable/drawable_arrow"
            android:layout_margin="15dp"
            android:background="@drawable/button_rounded"
            android:layout_width="150dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/btn_update_items"
            android:text="Update Items"
            android:drawableEnd="@drawable/drawable_arrow"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:background="@drawable/button_rounded"
            android:layout_width="150dp"
            android:layout_height="40dp" />


    </RelativeLayout>




</LinearLayout>




